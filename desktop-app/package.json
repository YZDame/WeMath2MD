{
  "name": "wemath2md",
  "version": "1.0.0",
  "description": "微信公众号数学文章转 Markdown 工具",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["wechat", "markdown", "ocr", "math"],
  "author": "yzdame",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {},
  "build": {
    "appId": "com.wemath2md.app",
    "productName": "WeMath2MD",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "python/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "extraResources": [
        {
          "from": "python",
          "to": "python"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "extraResources": [
        {
          "from": "python",
          "to": "python"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "icon": "assets/icon.png",
      "target": ["AppImage", "deb"],
      "extraResources": [
        {
          "from": "python",
          "to": "python"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": ["zh_CN", "en_US"]
    }
  }
}
