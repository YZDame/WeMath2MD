{
  "name": "wemath2md",
  "version": "1.0.0",
  "description": "微信公众号数学文章转 Markdown 工具",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "wechat",
    "markdown",
    "ocr",
    "math"
  ],
  "author": "yzdame",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.wemath2md.app",
    "productName": "WeMath2MD",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "python/**/*",
      "node_modules/**/*"
    ],
    "electronLanguages": [
      "zh-CN",
      "en-US"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        "dmg"
      ],
      "sign": null,
      "extraResources": [
        {
          "from": "python",
          "to": "python"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "zip"
      ],
      "extraResources": [
        {
          "from": "python",
          "to": "python"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "icon": "assets/icon.png",
      "target": [
        "AppImage"
      ],
      "extraResources": [
        {
          "from": "python",
          "to": "python"
        }
      ]
    }
  }
}
